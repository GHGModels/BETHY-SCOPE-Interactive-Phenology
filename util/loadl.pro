PRO loadl, file, data, ncols, maxlines, description, FORMAT = frm                ; LOAD LISTED DATA BY LINES; IGNORE LINES STARTING WITH A '#', '&' OR '@' SIGN                if n_elements(maxlines) eq 0 then maxlines = 100000data = FLTARR (ncols, maxlines)des = STRARR (maxlines)line = ' 'in = FLTARR (ncols)cnt = 0LOPENR, unit, file, /GET_LUNWHILE NOT EOF(unit) AND cnt LT maxlines DO BEGIN  READF, unit, line  l1 = STRMID (line, 0, 1)  IF l1 EQ '#' THEN BEGIN     des(cnt) = STRMID (line, 1, STRLEN (line) - 1)  ENDIF   IF l1 NE '#' AND l1 NE '&' AND l1 NE '@' AND line NE '' THEN BEGIN     IF KEYWORD_SET (frm) THEN $       READS, line, in, FORMAT = frm ELSE $       READS, line, in     data(*,cnt) = in     cnt = cnt + 1L  ENDIFENDWHILEFREE_LUN, unitnlines = cntdata = data(*,0:MAX ([nlines-1, 0]))description = des(0:MAX ([nlines-1, 0]))END